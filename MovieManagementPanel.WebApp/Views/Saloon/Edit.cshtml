@model SaloonEditModel

@{
    ViewData["Title"] = "Salon Düzenle";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MovieIds" class="control-label"></label>
                <select asp-for="MovieIds" asp-items="ViewBag.Movies" multiple class="form-control">
                    @if (!Model.MovieIds.Any())
                    {
                        <option selected disabled>Salon Seç</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

